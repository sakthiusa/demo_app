<h1>Listing microposts</h1>

<table>
  
  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%=User.find(micropost.user_id).name%></td>
        <td>says : &nbsp;</td>
        <td><%= micropost.content %></td>
       </td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
